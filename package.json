{
  "name": "react-animated-code",
  "version": "0.3.0",
  "description": "A React component for beautifully animated code transitions using Shiki Magic Move",
  "type": "module",
  "main": "./dist/react-animated-code.umd.cjs",
  "module": "./dist/react-animated-code.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-animated-code.js",
      "require": "./dist/react-animated-code.umd.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "code",
    "animation",
    "shiki",
    "syntax-highlighting",
    "code-block",
    "animated",
    "transition"
  ],
  "author": "Tony Tang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonytangdev/react-animated-code.git"
  },
  "bugs": {
    "url": "https://github.com/tonytangdev/react-animated-code/issues"
  },
  "homepage": "https://github.com/tonytangdev/react-animated-code#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "shiki": "^3.20.0",
    "shiki-magic-move": "^1.2.1"
  },
  "devDependencies": {
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.3.0"
  }
}
